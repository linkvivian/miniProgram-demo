/* pages/template/template.wxss */
.temp-container {
  display: flex;
  flex-direction: column;
  border-top:2rpx solid #efefef;
  border-bottom:2rpxpx solid #efefef;
  margin:20rpx 0 40rpx;
}

.avatar-date {
  margin:10rpx 0 20rpx 10rpx;
}

.avatar-date image {
  width: 60rpx;
  height:60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.avatar-date text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.company {
  font-size: 36rpx;
  font-weight: 700;
  padding:10rpx;
}
.company image{
  width: 100%;
  height: 400rpx;
}

.content {
  font-size: 24rpx;
  text-indent: 48rpx;
  color: #666;
  line-height: 12rpx;
}
.collection-love text{
  font-size: 32rpx;
  margin-left: 10rpx;
}