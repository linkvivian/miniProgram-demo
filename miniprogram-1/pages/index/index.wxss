/**注意要用flex布局和rpx，控制台上的单位是px，官方标准1px=rpx**/
.wrapper {
  display: flex;
  flex-direction: column;  /**主轴方向**/
  align-items: center;    
}
.avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0;
}
.go-button, .login-button{
  font-size: 32rpx;
  background-color: #A2B3A5;
}
.go-button{
    margin: 200rpx 0;
}
.login-button{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}